{% set background_image = 'bg-image-hero-video.jpg' %}

{% block videostories %}
<div class="block-video-stories" style="background-image: url({{ img_path ~ background_image }});">
  <div class="block-video-stories__background">
    <video class="block-video-stories__video">
      <source src="{{img_path}}media/video.mp4" type="video/mp4">
      <source src="{{img_path}}media/video.ogv" type="video/ogg">
      <source src="{{img_path}}media/video.webm" type="video/webm">
      Your browser doesn't support HTML5 video. Here's a <a href="#">link</a> to download the video.
    </video>
  </div>
  <div class="block-video-stories__container container">
    <div class="tile__content">
      <h3 class="tile__title">An Inspirational Comeback</h3>
      <a class="tile__link" href="#">The story of willie gonzalez</a>
    </div>
  </div>
  <div class="block-video-stories__player">
    <span class="block-video-stories__icon">Icon</span>
  </div>
</div>

{% endblock %}
